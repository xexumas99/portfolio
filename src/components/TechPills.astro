---
interface Tag {
  name: string;
  class: string;
  icon: string;
}
---

<ul class="flex flex-row flex-wrap gap-x-4 gap-y-4 mb-4">
  {
    Astro.props.tags.map((tag: Tag) => (
      <li>
        <span
          class={`flex flex-row gap-x-2 justify-center text-lg items-center rounded-full py-1 px-3 bg-gray-800 text-white`}
        >
          <img class="size-5" src={tag.icon} alt={tag.name} />
          {tag.name}
        </span>
      </li>
    ))
  }
</ul>
