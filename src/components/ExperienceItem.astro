---
import TechPills from "./TechPills.astro";

const { title, description, date, skills } = Astro.props;
---

<div
  class="absolute size-3.5 bg-yellow-200 rounded-full mt-1 -start-2 border border-yellow-200 dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-lg font-normal leading-none text-yellow-200">{date}</time
>
<h3 class="text-2xl font-semibold text-primary mt-4">
  {title}
</h3>
<p class="mb-4 text-xl font-normal text-gray-200 text-pretty">
  {description}
</p>

<TechPills tags={skills} />

